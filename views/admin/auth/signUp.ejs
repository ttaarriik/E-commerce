<%- include("../../partials/header") %> 

<% const getError = (errors, prop) => { %>
<%    try { %>
<%      return errors.mapped()[prop].msg; %>
<%    } catch (err) { %>
<%      return '';  %>
<%   }%>
<% }; %>

<div class="container">
        <div class="columns is-centered">
          <div class="column is-one-quarter">
            <form method="POST" action = "/signUp">
              <h1 class="title">Sign Up</h1>
              <div class="field">
                <label class="label">Username</label>
                <input class="input" placeholder="Username" name="username" />
				  <% if(errors) { %> 
				  	<p class="help is-danger"><%= getError(errors, "username") %></p>
				  <% }			 %>
              </div>
              <div class="field">
                <label class="label">Password</label>
                <input class="input" placeholder="Password" name="password" type="password" />
				  <% if(errors) { %> 
				   <p class="help is-danger"><%= getError(errors, "password") %></p>
				   <% }			 %>
              </div>
              <div class="field">
                <label class="label">Password Confirmation</label>
                <input class="input" placeholder="Password Confirmation" name="passwordConfirmation" type="password" />
				  <% if(errors) { %> 
					<p class="help is-danger"><%= getError(errors, "passwordConfirmation") %></p>  
				   <% }			 %>
              </div>
              <button class="button is-primary">Submit</button>
            </form>
            <a href="/signIn">Have an account? Sign In</a>
          </div>
        </div>
      </div>

<%- include("../../partials/footer") %> 